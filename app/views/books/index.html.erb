<!--テンプレート化-->
<%= render 'users/user',user:current_user %>

<!--Books-->
<h1>Books</h1>
 <table class='table'>
 <thead>
     <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
     </tr> 
  </thead>
<tbody>
<% @books.each do |book| %> 
<tr>
    <td><td><%=link_to user_path(book.user) do %>
    <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    </td>
    <td><%=link_to book.title, book_path(book.id)%></td>
    <td><%= book.body %></td>
   
   </tr>
<% end %>
</tbody>
</table>